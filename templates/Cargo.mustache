[package]
name = "{{{packageName}}}"
version = "{{#lambdaVersion}}{{{packageVersion}}}{{/lambdaVersion}}"
authors = ["Outscale SAS <opensource@outscale.com>"]
edition = "2021"
license = "BSD-3-Clause"
description = "Outscale API SDK"
repository = "https://github.com/outscale/osc-sdk-rust/"

[dependencies]
serde = "^1.0"
serde_derive = "^1.0"
serde_json = "^1.0"
url = "^2.2"
{{#hyper}}
hyper = { version = "~0.14", features = ["full"] }
hyper-tls = "~0.5"
http = "~0.2"
serde_yaml = "0.7"
base64 = "~0.7.0"
futures = "^0.3"
{{/hyper}}
{{#reqwest}}
{{^supportAsync}}
reqwest = {version = "~0.9", default-features = false}
{{/supportAsync}}
{{#supportAsync}}
[dependencies.reqwest]
version = "^0.11"
features = ["json", "multipart"]
default-features = false
{{/supportAsync}}
{{/reqwest}}
{{#withAWSV4Signature}}
secrecy = "~0.10"
aws-credential-types = "1.2.8"

[dependencies.aws-sigv4]
version = "^1.3"
features = ["sign-http"]
default-features = false
{{/withAWSV4Signature}}

[dev-dependencies]
{{#hyper}}
tokio-core = "*"
{{/hyper}}
rand = "~0.9"

[features]
default = ["reqwest/default-tls"]
rustls-tls = ["reqwest/rustls-tls"]
